---
destinationDir: app/components/<%= props.subdirectory %>
patch:
  path: "app/components/index.ts"
  append: "export * from \"./<%= props.subdirectory %><%= props.pascalCaseName %>\"\n"
  skip: <%= props.skipIndexFile %>
---
import { View } from "react-native"
import { observer } from "mobx-react-lite"
import { Text } from "@/components/Text"
import { styled } from "nativewind"

const StyledView = styled(View)

export interface <%= props.pascalCaseName %>Props {
  /**
   * An optional style override useful for padding & margin.
   */
  className?: string
}

/**
 * Describe your component here
 */
export const <%= props.pascalCaseName %> = observer(function <%= props.pascalCaseName %>(
  props: <%= props.pascalCaseName %>Props,
) {
  const { className } = props

  return (
    <StyledView className={`justify-center ${className}`}>
      <Text className="font-normal text-sm text-primary">Hello</Text>
    </StyledView>
  )
})
